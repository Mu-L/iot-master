{
  "title": "空间设备",
  "template": "table",
  "toolbar": [
    {
      "label": "绑定",
      "icon": "plus",
      "type": "button",
      "action": {
        "type": "dialog",
        "page": "iot/project-device-choose",
        "params_func": "return {project_id: this.space.project_id}",
        "after_close": "this.request.post('iot/space-device/create', {space_id:this.params.space_id, device_id:result.device_id}).subscribe(res=>this.load())"
      }
    }
  ],
  "operators": [
    {
      "icon": "eye",
      "action": {
        "type": "page",
        "page": "iot/device-detail",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "edit",
      "action": {
        "type": "page",
        "page": "iot/device-edit",
        "params_func": "return {id: data.id}"
      }
    },
    {
      "icon": "delete",
      "title": "解绑",
      "confirm": "确认解绑？",
      "action": {
        "type": "script",
        "script": "this.request.get('table/space-device/delete/'+data.space_id+'/'+data.device_id).subscribe(res=>this.load())"
      }
    }
  ],
  "columns": [
    {
      "key": "device",
      "label": "设备",
      "action": {
        "type": "page",
        "page": "iot/device-detail",
        "params_func": "return {id: data.device_id}"
      }
    },
    {
      "key": "name",
      "label": "名称"
    },
    {
      "key": "created",
      "label": "日期",
      "type": "date"
    }
  ],
  "search_api": "table/space-device/search",
  "mount": "if(this.params.space_id)this.filter.space_id=this.params.space_id;"
}